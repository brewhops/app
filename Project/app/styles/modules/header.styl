@import 'variables/colors'

HeaderHeight = 30px

.header
    position fixed
    width 100vw
    background DarkBlue
    text-align center
    h2, a
        color white
        line-height HeaderHeight
        padding 0
    a
        position absolute
        left 5px
        color white
        text-transform capitalize
        text-decoration none
        font-weight 100
    h2
        font-size 1.3em

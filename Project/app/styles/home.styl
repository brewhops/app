@import 'modules/header'
@import 'modules/inputs'
@import 'modules/buttons'
@import 'variables/mixins'
@import 'variables/breakpoints'
@import 'globals'

#dataEntry
    display flex
    flex-direction column
    align-items center
    max-width 500px

    // call the less than function
    // this code will only apply to screen sizes smaller than a tablet
    +less-than(tablet)
        width 90vw
        input
            margin 2px
        h2
            margin 0

    .inline
        display flex
        justify-content space-between

        input
            width 32%

#tankInfo
    h2
        text-align center
    #tankContents
        height 80vh
        overflow scroll
        padding 0 10px
        display grid
        grid-template-columns repeat(3, 200px)
        grid-gap 10px
        color white
        font-weight 100
        a
            text-decoration none
            color white
        .tank
            background Teal
            width 100%
            td:nth-child(2)
                text-align right
            td
                padding 5px
        .cap
            background Orange
        .cool
            background Brown
        .crash
            background Red

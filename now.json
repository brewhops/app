{
  "version": 2,
  "name": "app",
  "alias": "app.brewhops.now.sh",
  "builds": [
      { "src": "package.json", "use": "@now/static-build" }
  ],
  "routes": [
    {"src": "^/js/(.*)", "dest": "/dist/js/$1"},
    {"src": "^/css/(.*)", "dest": "/dist/css/$1"},
    {"src": "^/img/(.*)", "dest": "/dist/img/$1"},
    {"src": ".*", "dest": "/dist/index.html"}
  ],
  "env": {
    "VUE_APP_API": "https://api.brewhops.now.sh"
  }
}
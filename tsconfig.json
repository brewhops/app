{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es5",
        "lib": [
            "es5",
            "es2015.promise",
            "dom"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue", 
        "src/router/index.js"
    ]
}